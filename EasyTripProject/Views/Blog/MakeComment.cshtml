
<div class="content-form">
    <h3>Yorum Yap</h3>
    
    <form method="post">
        <input placeholder="ID" name="BlogId" value="@ViewBag.item" required />
        <input type="text" placeholder="Kullanıcı Adı" name="UserName" required />
        <input type="text" placeholder="E-Mail Adresi" name="Email" required />
        <textarea placeholder="Yorum" name="Comment"></textarea>
        <input type="submit" value="Gönder" />
    </form>
</div>

