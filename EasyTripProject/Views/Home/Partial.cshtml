@using EasyTripProject.Models.Entities
@model List<Blog>
<div class="con-bot">
    @{
        foreach (var item in Model)
        {
            <div class="left">
                <div class="bot-left">
                    <img src="@item.BlogImage" alt="" />
                </div>
                <div class="left-text">
                    <h4>@item.Title</h4>
                    <span class="doller">@item.Date.ToString("dd.MM.yyyy")</span>
                    <p>
                        @item.Description.Substring(0, item.Description.Substring(0, 80).LastIndexOf(" "))
                        ...
                    </p>
                    <p><a href="/Blog/BlogDetail/@item.BlogId"><span class="read">Devamını Oku >></span></a></p>
                </div>
            </div>
        }
    }

    @Html.Action("PartialRight", "Home")
    <div class="clear"></div>
</div>